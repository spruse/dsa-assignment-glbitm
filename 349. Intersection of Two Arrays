class Solution {
    public int[] intersection(int[] a, int[] b) {
        // int a[] = {1,2,2,2,2,2,2,3,4,5,6};
         //int b[] = {1,2,3,8,90,9,9};
         int n = a.length;
         int m = b.length;
         ArrayList<Integer> ls = new ArrayList<>();
        int c []= new int [1001];
        for (int l = 0; l < n; l++) {
            if(c[a[l]]==0)
            c[a[l]]++;
        }
        for (int l = 0; l < m; l++) {
            if(c[b[l]]==1)
            c[b[l]]++;
        }
        for (int l = 0; l < 1001; l++) {
            if(c[l]==2){
                ls.add(l);
            }
        }
        int d[] = new int [ls.size()];
        for (int l = 0; l < ls.size(); l++) {
            d[l]=ls.get(l);
        }
return d;
    }
}
