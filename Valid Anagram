class Solution {
    public boolean isAnagram(String s, String t) {
        int ans[] = new int[27];
        int ans2[]  = new int [27];

        int n = s.length();
        int m= t.length();

        if(n!= m) return false;

        for(int i = 0 ; i < n ; i++){
            ans[s.charAt(i)-'a']++;
            ans2[t.charAt(i)-'a']++;
        }
       
       for(int i = 0 ; i < 27 ; i++){
        if(ans[i]!= ans2[i]){
            return false;
        }
       }
        return true;
        
    }
}
