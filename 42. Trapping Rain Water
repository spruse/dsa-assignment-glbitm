class Solution {
    public int trap(int[] a) {
        int n = a.length;
        int l = 0;
        int r  = n-1;
        int lmax = 0;
        int rmax = 0;
        int total = 0; 
        
        while(l<r){
            if(a[l] <= a[r]){
             lmax = Math.max(lmax , a[l]); 
              total += Math.max(0, ( lmax  - a[l] ) );
             // System.out.println(total);
              
              l++;
            }
            else{
                rmax = Math.max(rmax , a[r]);
               total += Math.max( 0 , (  rmax - a[r] ) );
               //System.out.println(total);
               r--;
            }
        }
        return total;
    }
}
