class Solution {
    public int maxSubArray(int[]a) {
         int n = a.length;
      int maxsum = Integer.MIN_VALUE;
      int sum = 0;
        for (int i = 0; i < n; i++) {
            sum+=a[i];
            maxsum = Integer.max(maxsum,sum);
            if(sum<0){
                sum= 0;
            }
        }
  return maxsum;
    }
}
