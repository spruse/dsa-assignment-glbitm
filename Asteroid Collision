
735. Asteroid Collision
import java.util.Stack;

class Solution {
    public int[] asteroidCollision(int[] a) {
        Stack<Integer> st = new Stack<>();
        int n = a.length;

        for (int i = 0; i < n; i++) {
            if (a[i] > 0) {
                // If the asteroid is moving right, push it onto the stack
                st.push(a[i]);
            } else {
                // Handle collision cases when asteroid is moving left
                while (!st.isEmpty() && st.peek() > 0 && st.peek() < Math.abs(a[i])) {
                    // Destroy smaller right-moving asteroids
                    st.pop();
                }

                // If the top asteroid is the same size but opposite direction, both are destroyed
                if (!st.isEmpty() && st.peek() == Math.abs(a[i])) {
                    st.pop();
                } 
                // If the stack is empty or the top asteroid is also moving left, push the current asteroid
                else if (st.isEmpty() || st.peek() < 0) {
                    st.push(a[i]);
                }
            }
        }

        // Convert the stack to an array
        int len = st.size();
        int ans[] = new int[len];

        for (int i = len - 1; i >= 0; i--) {
            ans[i] = st.pop();
        }

        return ans;
    }
}
