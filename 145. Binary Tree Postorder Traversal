/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */

class Solution {

    // Optional: Your original recursive function (this is postorder, not preorder)
    private static void pre(TreeNode root, List<Integer> ls) {
        if (root == null) return;
        pre(root.left, ls);
        pre(root.right, ls);
        ls.add(root.val);
    }

    // Pair class to track traversal state
    class Pair {
        TreeNode node;
        int num;

        Pair(TreeNode node, int num) {
            this.node = node;
            this.num = num;
        }
    }

    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> pre = new ArrayList<>();
        List<Integer> in = new ArrayList<>();
        List<Integer> post = new ArrayList<>();

        if (root == null) return pre;

        Stack<Pair> st = new Stack<>();
        st.push(new Pair(root, 1));
        TreeNode node;

        while (!st.isEmpty()) {
            Pair top = st.peek();

            if (top.num == 1) {
                node = top.node;
                pre.add(node.val);
                top.num++;
                if (node.left != null) {
                    st.push(new Pair(node.left, 1));
                }
            } else if (top.num == 2) {
                node = top.node;
                in.add(node.val);
                top.num++;
                if (node.right != null) {
                    st.push(new Pair(node.right, 1));
                }
            } else {
                node = top.node;
                post.add(node.val);
                st.pop();
            }
        }

        return pre; // Change to `in` or `post` if needed
    }
}
