/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public static void righty(TreeNode root , List<Integer> ls ,int depth ){
        if(root == null) return;
          

        if(depth  == ls.size())
        ls.add(root.val);
    
        if(root.right!=null)
        righty(root.right ,ls , depth+1);

        
        righty(root.left ,ls,depth+1);

    }
    public List<Integer> rightSideView(TreeNode root) {
        List<Integer> ls = new ArrayList<>();

          righty(root ,ls,0);
          return ls;
        
    }
}
